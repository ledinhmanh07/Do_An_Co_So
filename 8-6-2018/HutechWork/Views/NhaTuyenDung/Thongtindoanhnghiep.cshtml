@using HutechWork.Models
@{
    ViewBag.Title = "Thongtindoanhnghiep";
    Layout = "~/Views/Shared/_LayoutNhaTuyenDung.cshtml";
}
<body>
    <div class="wrapper">
        <div class="clearfix"></div>
        <section class="inner-header-title">
            <div class="container">
                <h1>Thông Tin Doanh Nghiệp</h1>
            </div>
        </section>
        <div class="clearfix"></div>
        <section class="detail-desc">
            <div class="container white-shadow">
                <div class="row">
                    <div class="detail-pic">
                        <img src="~/img/@Model.LOGO" class="img-responsive" alt="" />
                    </div>
                    @*<div style="text-align:center"><h4>@Model.THONGTINCANHAN.HO @Model.THONGTINCANHAN.TEN</h4></div>*@
                </div>
                <div class="row bottom-mrg">
                    <div class="col-md-8 col-sm-8">
                        <div class="detail-desc-caption">
                            <h4>@Model.TENDN</h4>
                            <p>Quy Mô : @Model.QUYMODN</p>
                            <p>Thông Tin: @Model.THONGTINDN</p>
                            <P>Phúc Lợi: @Model.PHUCLOIDN</P>
                            <ul> </ul>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <div class="get-touch">
                            <h4>Thông Tin Liên Hệ</h4>
                            <ul>
                                <li>
                                    <i class="fa fa-map-marker"></i>
                                    <span>@Model.DIACHI - @Model.THANHPHO.TENTHANHPHO </span>
                                </li>
                                <li>
                                    <i class="fa fa-envelope"></i>
                                    <span>@Model.TAIKHOAN_DN.ID</span>
                                </li>                               
                                @*<li>
                                    <i class="fa fa-money"></i>
                                    <span>***</span>
                                </li>*@
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row no-padd">
                    <div class="detail pannel-footer">
                        <div class="col-md-5 col-sm-5">
                        </div>
                        <div class="col-md-7 col-sm-7">
                            <div class="detail-pannel-footer-btn pull-right">
                                <a href="@Url.Action("Chitiet","NhaTuyenDung")" class="footer-btn grn-btn" title="">Chỉnh Sửa</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="full-detail-description full-detail">
            <div class="wrapper" style="background-color:#F5F5F5">
                <div class="container">                  
                    @Html.Action("Vieclamdadang", "NhaTuyenDung")
                </div>
            </div>
        </section>
    </div>
</body>
