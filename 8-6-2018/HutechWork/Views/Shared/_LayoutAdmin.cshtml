<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!-- Favicons -->
    <title>
        Trang Chủ
    </title>
    <!-- Extra details for Live View on GitHub Pages -->
    <!--     Fonts and icons     -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <link href="~/Content/material-dashboard.min.css?v=2.0.0" rel="stylesheet" />
    <!-- Documentation extras -->
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <!-- iframe removal -->
</head>
<body style="background-image:none;background-color:#eee">
    <div class="wrapper">
        <div class="sidebar" data-color="green" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

                Tip 2: you can also add an image using data-image tag
            -->
            <div class="logo">
                <a href="/TrangChu/Index" class="simple-text logo-normal">
                    <img height="70" width="200" src="~/img/Logo_HUTECH.jpg" />
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">
                            <i class="fa fa-check-square-o"></i>
                            <p>Duyệt phiếu đăng tuyển</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/Admin/TaiKhoanCN">
                            <i class="material-icons">person</i>
                            <p>tài khoản cá nhân</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/Admin/TaiKhoanDN">
                            <i class="fa fa-university"></i>
                            <p>tài khoản doanh nghiệp</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/Admin/QuanLyDT">
                            <i class="material-icons">content_paste</i>
                            <p>Quản lý đăng tuyển</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute fixed-top">
                <div class="container-fluid">
                    <div class="navbar-wrapper pull-right">
                        @if (Session["ADMIN"] != null)
                        {
                            <a style="padding-left:950px" class="navbar-brand" href="/Admin/DangXuat">Đăng xuất</a>
                        }
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<!--   Core JS Files   -->
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/popper.min.js"></script>
<script src="~/Scripts/bootstrap-material-design.min.js"></script>
