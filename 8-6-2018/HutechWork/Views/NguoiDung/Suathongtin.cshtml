@using HutechWork.Models;
@{
    ViewBag.Title = "ChiTiet";
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="zxx">
<head>
    <title>Photography Form Responsive Widget Template :: w3layouts</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" ~/Content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords" ~/Content="Photography Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
    </script>
    <!-- Meta tag Keywords -->
    <!-- css files -->
    <link rel="stylesheet" href="~/Content/style1.css" type="text/css" media="all" />
    <!-- Style-CSS -->
    <!-- //css files -->
    <!-- web-fonts -->
    <link href="//fonts.googleapis.com/css?family=Londrina+Outline" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <!-- //web-fonts -->
</head>

<body>
    <script src='/ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'></script>
    <script src="/m.servedby-buysellads.com/monetization.js" type="text/javascript"></script>
    <!-- ~/Content -->
    <h1>
        <span>C</span>hi
        <span>T</span>iết
        <span>T</span>ài
        <span>K</span>hoản
    </h1>
    <div class="main-~/Content-agile">
        <div class="sub-main-w3">
            @using (Html.BeginForm("Suathongtin", "NguoiDung", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
            <form action="/NguoiDung/Suathongtin" method="get">
                <div class="form-style-agile">
                    <label>Logo Hiện Tại</label>
                    @if (Model.HINHDD == null)
                    {
                        <p></p>
                        <input class="input-group" name="fileUpload" type="file">
                    }
                    else
                    { 
                        <p><img height="120" width="120" src="~/img/@Model.HINHDD" /></p>
                        <input class="input-group" name="fileUpload" type="file">
                    }
                </div>
                <div class="form-style-agile">
                    <label>Họ</label>
                    <input style="color:black" name="ho" type="text" value="@Model.HO" required="">
                </div>

                <div class="form-style-agile">
                    <label>Tên</label>
                    <input style="color:black" name="ten" type="text" value="@Model.TEN" required="">
                </div>

                <label class="control-label" for="pasword">Giới tính</label>
                <div class="row">
                    <div class="col-xs-4">
                        <label>
                            @if (Model.GIOITINH.ToString().Contains("Nam"))
                {
                    <input type="radio" name="gender" value="Nam" id="gender_male" class="gender" checked="">
                    <span>
                        <i class="ico"></i>
                    </span>
    }
    else
    {
            <input type="radio" name="gender" value="Nam" id="gender_male" class="gender">
            <span>
                <i class="ico"></i>
            </span>
}
                            Nam
                        </label>
                    </div>
                    <div class="col-xs-4">
                        <label>
                            @if (Model.GIOITINH.ToString().Contains("Nữ"))
                {
                    <input type="radio" name="gender" value="Nữ" id="gender_male" class="gender" checked="">
                    <span>
                        <i class="ico"></i>
                    </span>
    }
    else
    {
            <input type="radio" name="gender" value="Nữ" id="gender_male" class="gender">
            <span>
                <i class="ico"></i>
            </span>
}
                            Nữ
                        </label>
                    </div>
                    <div class="col-xs-4">
                        <label>
                            @if (Model.GIOITINH.ToString().Contains("Khác"))
                {
                    <input type="radio" name="gender" value="Khác" id="gender_male" class="gender" checked="">
                    <span>
                        <i class="ico"></i>
                    </span>
    }
    else
    {
            <input type="radio" name="gender" value="Khác" id="gender_male" class="gender">
            <span>
                <i class="ico"></i>
            </span>
}
                            Khác
                        </label>

                    </div>

                </div>



                <div class="w3layouts-grids">
                    <div class="form-style-agile form-grids-w3l">
                        <label>Ngày Sinh</label>
                        <input style="color:black" name="ngaysinh" type="date" value="@String.Format("{0:yyyy/MM/dd}",Model.NGAYSINH)" required="">
                    </div>
                </div>
                <div class="form-style-agile">
                    <label>Email</label>
                    <input style="color:black" name="email" type="text" value="@Model.EMAIL" required="">
                </div>
                <div class="form-style-agile">
                    <label>Số Điện Thoại</label>
                    <input style="color:black" name="sdt" type="text" value="@Model.SDT" required="">
                </div>

                <div class="w3layouts-grids">
                    <div class="form-style-agile form-grids-w3l">
                        <label>Thành Phố</label>
                        <select style="color:black" name="thanhpho" class="category">
                            <option selected="selected">@Model.THANHPHO.TENTHANHPHO</option>
                            @Html.Action("Diadiem", "NguoiDung")
                        </select>
                    </div>
                </div>
                <div class="form-style-agile">
                    <label>Địa Chỉ</label>
                    <input style="color:black" name="diachi" type="text" value="@Model.DIACHI" required="">
                </div>
                <input type="submit" value="Lưu">
                <div style="padding-top:10px" class="w3layouts-grids">
                    <a style="color:white" href="/NguoiDung/Chitietcanhan">&lt&lt Trở về</a>
                </div>
            </form>
            }
        </div>
    </div>
    <!-- ~/Content -->
    <!---728x90--->
    <script src='/publisher.eboundservices.com/dynamicAds/dynamicScript.js'></script>
    <!-- footer -->
    <div class="footer">
        <h2>
            &copy; 2018 Photography Form. All rights reserved | Design by
            <a href="http://w3layouts.com">W3layouts</a>
        </h2>
    </div>
    <!-- //footer -->
    <!---728x90--->
    <script src='/publisher.eboundservices.com/dynamicAds/dynamicScript.js'></script>
    <!-- js -->
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <!-- date-->
    <link rel="stylesheet" href="~/Content/jquery-ui.css" />
    <script src="~/Scripts/jquery-ui.js"></script>
    <!-- //date -->
    <!-- time -->
    <script src="~/Scripts/wickedpicker.js"></script>
    <link href="~/Content/wickedpicker.css" rel="stylesheet" type='text/css' media="all" />
    <!-- //time -->

</body>

</html>
