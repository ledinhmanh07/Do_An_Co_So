<body>
    <script src='/ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'></script>
    <script src="/m.servedby-buysellads.com/monetization.js" type="text/javascript"></script>
    <!-- ~/Content -->
    <h1>
        <span>P</span>hiếu
        <span>Đ</span>ăng
        <span>T</span>uyển
    </h1>
    <div class="main-~/Content-agile">
        <div class="sub-main-w3">
            @using (Html.BeginForm("DangTuyen", "NhaTuyenDung", FormMethod.Post))
            {
                <form action="/NhaTuyenDung/DangTuyen" method="get">
                    <div class="form-style-agile">
                        <label>Tiêu Đề</label>
                        <input style="color:black" placeholder="Tiêu đề ..." name="tieude" type="text" required="">
                    </div>
                    <div class="w3layouts-grids">
                        <div class="form-style-agile form-grids-w3l">
                            <label>Chức Danh</label>
                            <input style="color:black" placeholder="Ex: Cử Nhân, Thạc sĩ ..." name="chucdanh" type="text" required="">
                        </div>
                        <div class="form-style-agile form-grids-w3l">
                            <label>Cấp Bậc</label>
                            <input style="color:black" placeholder="Ex: Nhân Viên, Giám Đốc ..." name="capbac" type="text" required="">
                        </div>
                    </div>
                    <div class="form-style-agile">
                        <label>Địa Chỉ Làm Việc</label>
                        <input style="color:black" placeholder="Địa chỉ làm việc ..." name="diachi" type="text" required="">
                    </div>
                    <div class="w3layouts-grids">
                        <div class="form-style-agile form-grids-w3l">
                            <label>Ngành Nghề</label>
                            <select style="color:black" name="nganhnghe" class="category">
                                <option>Ngành Nghề</option>
                                @Html.Action("Nganhnghe", "TrangChu")
                            </select>
                        </div>
                        <div class="form-style-agile form-grids-w3l">
                            <label>Thành Phố</label>
                            <select style="color:black" name="thanhpho" class="category">
                                <option>Thành Phố</option>
                                @Html.Action("Diadiem", "TrangChu")
                            </select>
                        </div>
                    </div>
                    <div class="w3layouts-grids">
                        <div class="form-style-agile form-grids-w3l">
                            <label>Mức Lương Tối Thiếu</label>
                            <input style="color:black" placeholder="Mức Lương Tối Thiếu ... VNĐ" name="mucluongtoithieu" type="number" required="">
                        </div>
                        <div class="form-style-agile form-grids-w3l">
                            <label>Mức Lương Tối Đa</label>
                            <input style="color:black" placeholder="Mức Lương Tối Đa ... VNĐ" name="mucluongtoida" type="number" required="">
                        </div>
                    </div>
                    <div class="form-style-agile">
                        <label>Mô Tả Công Việc</label>
                        <textarea style="color:black" placeholder="Mô Tả Công Việc ..." name="mota" required=""></textarea>
                    </div>
                    <div class="form-style-agile">
                        <label>Yêu Cầu Công Việc</label>
                        <textarea style="color:black" placeholder="Yêu Cầu Công Việc ..." name="yeucau" required=""></textarea>
                    </div>
                    <div class="form-style-agile">
                        <label>Kỹ Năng</label>
                        <textarea style="color:black" placeholder="Kỹ Năng ..." name="kynang" required=""></textarea>
                    </div>
                    <div class="w3layouts-grids">
                        <div class="form-style-agile form-grids-w3l">
                            <label>Người Liên Hệ</label>
                            <input style="color:black" placeholder="Tên Người Liên Hệ ..." name="nguoilienhe" type="text" required="">
                        </div>
                        <div class="form-style-agile form-grids-w3l">
                            <label>Email Liên Hệ</label>
                            <input style="color:black" placeholder="Email Liên Hệ ..." name="email" type="email" required="">
                        </div>
                    </div>
                    <div class="w3layouts-grids">
                        <div class="form-style-agile form-grids-w3l">
                            <label>Hạn Đăng Tuyển</label>
                            <input style="color:black" name="thoihan" type="date" required="">
                        </div>
                    </div>
                    <input type="submit" value="Đăng Tuyển">
                </form>
            }
        </div>
    </div>
    <!-- ~/Content -->
